// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String    @unique
  passwordHash  String
  emailVerified Boolean   @default(false)
  role          Role      @default(user)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogoutAt  DateTime? // nullable; update explicitly on logout
  posts         Post[]
  comments      Comments[]
  votes         Vote[]

  @@map("users")
}

model Post {
  id         String       @id @default(cuid())
  userId     String
  title      String
  slug       String       @unique
  content    String       // This will store markdown
  contentHtml String?     // Optional: can store rendered HTML if you want server-side rendering
  imageUrl   String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments   Comments[]
  votes      Vote[]       @relation("PostVotes")
  tags       PostTag[]
  categories PostCategory[]

  @@map("posts")
}

model Tags {
  id   String @id @default(cuid())
  name String @unique
  posts PostTag[]

  @@map("tags")
}

model PostTag {
  id     String @id @default(cuid())
  postId String
  tagId  String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tags   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
  @@map("post_tags")
}

model Categories {
  id    String @id @default(cuid())
  title String @unique
  posts PostCategory[]

  @@map("categories")
}

model PostCategory {
  id         String     @id @default(cuid())
  postId     String
  categoryId String
  post       Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  category   Categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([postId, categoryId])
  @@map("post_categories")
}

model Comments {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  votes     Vote[]   @relation("CommentVotes")

  @@map("comments")
}

model Vote {
  id         String     @id @default(cuid())
  userId     String
  targetId   String
  targetType TargetType
  type       VoteType
  createdAt  DateTime   @default(now())
  
  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Add explicit relations for posts and comments with relation names
  post       Post?      @relation("PostVotes", fields: [postId], references: [id], onDelete: Cascade)
  postId     String?
  
  comment    Comments?  @relation("CommentVotes", fields: [commentId], references: [id], onDelete: Cascade)
  commentId  String?
  
  @@unique([userId, targetId, targetType])
  @@map("votes")
}

model TokenBlacklist {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("token_blacklist")
}

enum Role {
  admin
  mod
  user
}

enum TargetType {
  post
  comment
}

enum VoteType {
  up
  down
}